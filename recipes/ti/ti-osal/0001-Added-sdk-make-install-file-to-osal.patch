+#
+# ==== Standard Variables ====
+#
+
+
+#
+# Where to install/stage the packages
+# Typically this would point to the devkit location
+# This must be passed to the Makefile.
+#
+
+DESTDIR="<UNDEFINED>"
+
+
+
+#
+# Installation of XDCTools. This must be passed to the Makefile for the
+# install-xdc target.
+#
+
+XDC_INSTALL_DIR="<UNDEFINED>"
+
+
+
+# 
+# ==== Tools ====
+#
+
+XS=$(XDC_INSTALL_DIR)/xs
+XDC=$(XDC_INSTALL_DIR)/xdc
+XDCPKG=$(XDC_INSTALL_DIR)/bin/xdcpkg
+INSTALL=install
+
+#
+# == Helper variables ==
+#
+
+PACKAGES=`$(call all_packages) | grep -v wizards | grep -v examples | xargs`
+
+LIBS = $(shell cd packages && find . -name '*.av5T' -or -name '*.av7A' -type f)
+HEADERS = $(shell cd packages && find . -name '*.h' -type f -not \( -name "package.defs.h" -o -name "_*.h" \))
+
+LIBDIR = $(DESTDIR)/lib
+INCDIR = $(DESTDIR)/include
+
+
+#
+# ==== Helper functions ====
+#
+
+purge = @find $(1) -name $(2) -exec rm -rf {} \;
+
+all_packages = $(XDCPKG) packages | sed -e 's:packages/::' -e 's:/:.:g'
+
+
+
+# 
+# ==== Targets ====
+#
+
+install-xdc:
+	@echo "Installing packages.."
+	$(INSTALL) -d $(DESTDIR)
+	$(XS) xdc.tools.repoman -c -r $(DESTDIR) -p packages $(PACKAGES)
+	$(call purge,$(DESTDIR),'*.c')
+	$(call purge,$(DESTDIR),'*.bld')
+
+install:
+	@echo "Installing libraries.."
+	@mkdir -p $(LIBDIR)
+	@cd packages && cp --parents $(LIBS) $(LIBDIR)
+	@echo "Installing header files.."
+	@mkdir -p $(INCDIR)
+	@cd packages && cp --parents $(HEADERS) $(INCDIR)
+
+help:
+	@echo
+	@echo "Available build targets are:"
+	@echo
+	@echo "  install-xdc"
+	@echo "      Install the RTSC packages in the repository at DESTDIR"
+	@echo
+	@echo "  install"
+	@echo "      Install the headers and libraries in the DESTDIR directory"
+	@echo
