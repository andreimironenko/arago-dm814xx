+#
+
+DESTDIR="<UNDEFINED>"
+
+
+
+#
+# == Helper variables ==
+#
+
+LIBDIR = $(DESTDIR)/lib
+INCDIR = $(DESTDIR)/include
+
+
+# 
+# ==== Targets ====
+#
+
+install:
+	@echo "Installing libraries.."
+	@mkdir -p $(LIBDIR)
+	@cp -R $(wildcard gfx_*_es*) $(LIBDIR)
+	@echo "Installing header files.."
+	@mkdir -p $(INCDIR)
+	@cp -R include/* $(INCDIR)
+
+help:
