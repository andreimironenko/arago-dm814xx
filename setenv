# Set OEBASE to where Arago overlay and OpenEmbedded repositories reside
# NOTE: Do NOT place a trailing / on the end of OEBASE.  Doing so will
#       cause the amend class to not find its files.
export OEBASE=$PWD

#AM: Arago local overlays
export ARAGO_TOP=${OEBASE}/arago
export OE_TOP=${OEBASE}/arago-oe-dev

#AM: Hanover local overlays
export HANOVER_SYSTEM_DEV=${OEBASE}/hanover-system-dev
export HANOVER_SYSTEM=${OEBASE}/hanover-system
export HANOVER_APPS=${OEBASE}/hanover-apps
export HANOVER_APPS_DEV=${OEBASE}/hanover-apps-dev
export PRODUCT
export PRODUCT_RELEASE
export PRODUCT_VERSION
export BUILD_PURPOSE
export BUILD_MODE
export POSTFIX
export RELDIR
export EXPORT_PATH
export HTTP_PATH
export FTP_PATH
export TFTP_PATH
export NFS_PATH
export KERNEL_VERSION
export GITSERVER="ebs"
export FTPSERVER="ebs"
export TFTPSERVER="ebs"
export NFSSERVER="ebs"
export HTTPSERVER="ebs"
export GITBASE="/opt/git"


# Set SCRATCH variable accordingly if you want to use scratch area
# export SCRATCH=/sim/scratch_AID

# Set the paths...
export BBPATH=${HANOVER_SYSTEM_DEV}:${HANOVER_SYSTEM}:${HANOVER_APPS_DEV}:${HANOVER_APPS}:${ARAGO_TOP}:${OE_TOP}
export PATH=$OEBASE/arago-bitbake/bin/:$OEBASE/arago-utils/:$OEBASE/arago/bin/:$PATH


# Preserve important/all environment variables
export BB_ENV_EXTRAWHITE="HANOVER_SYSTEM_DEV HANOVER_SYSTEM HANOVER_APPS_DEV HANOVER_APPS OEBASE OE_TOP ARAGO_TOP \ 
MACHINE META_SDK_PATH TOOLCHAIN_TYPE TOOLCHAIN_BRAND http_proxy https_proxy \
ftp_proxy no_proxy GIT_PROXY_COMMAND PRODUCT PRODUCT_RELEASE PRODUCT_VERSION \
BUILD_PURPOSE BUILD_MODE POSTFIX RELDIR KERNEL_VERSION EXPORT_PATH HTTP_PATH FTP_PATH TFTP_PATH NFS_PATH \
LIB_BUILD_MODE TASK_HANOVER_COMMON TASK_HANOVER_PRODUCT TASK_HANOVER_PRODUCT_LIBS \
GITSERVER FTPSERVER TFTPSERVER NFSSERVER HTTPSERVER \
GITBASE"
# export BB_PRESERVE_ENV=1
